generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "mongodb"
	url      = env("DATABASE_URL")
}


// Model Coupon 
model Coupon {
	id String @id @default(auto()) @map("_id") @db.ObjectId
	title String
	couponCode String
	slug String
	image String
	expiryDate DateTime
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
}


// Model Banner
model Banner {
	id String @id @default(auto()) @map("_id") @db.ObjectId
	title String
	slug String
	link String
	image String
	isActive Boolean
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
}